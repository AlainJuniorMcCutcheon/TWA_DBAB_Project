#:import Factory kivy.factory.Factory

<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: 'Welcome'
            font_size: 32
            bold: True
            halign: 'center'

        Button:
            text: 'Login'
            size_hint_y: None
            height: 50
            on_press:
                root.manager.current = 'login'
                root.manager.transition.direction = 'left'

        Button:
            text: 'Register'
            size_hint_y: None
            height: 50
            on_press:
                root.manager.current = 'register'
                root.manager.transition.direction = 'left'

<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: 'Register'
            font_size: 24
            halign: 'center'

        TextInput:
            hint_text: 'Email'
            id: email
            multiline: False
            input_type: 'text'
            write_tab: False

        TextInput:
            hint_text: 'Password'
            id: password
            password: True
            multiline: False
            write_tab: False

        TextInput:
            hint_text: 'First Name'
            id: first_name
            multiline: False
            write_tab: False

        TextInput:
            hint_text: 'Last Name'
            id: last_name
            multiline: False
            write_tab: False

        BoxLayout:
            spacing: 10
            size_hint_y: None
            height: 50
            Button:
                text: 'Submit'
                on_press: app.register_guest()
            Button:
                text: 'Cancel'
                on_press:
                    root.manager.current = 'welcome'
                    root.manager.transition.direction = 'right'

        Label:
            id: error_label
            text: ''
            color: 1, 0, 0, 1
            size_hint_y: None
            height: 30

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: 'Please Sign In'
            font_size: 24
            halign: 'center'

        TextInput:
            hint_text: 'Email'
            id: email
            multiline: False
            input_type: 'text'
            write_tab: False

        TextInput:
            hint_text: 'Password'
            id: password
            password: True
            multiline: False
            write_tab: False

        BoxLayout:
            spacing: 10
            size_hint_y: None
            height: 50
            Button:
                text: 'Login'
                on_press: app.login_guest()
            Button:
                text: 'Back'
                on_press:
                    root.manager.current = 'welcome'
                    root.manager.transition.direction = 'right'

        Label:
            id: error_label
            text: ''
            color: 1, 0, 0, 1
            size_hint_y: None
            height: 30

<SearchScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: 'Search Listings'
            font_size: 24
            halign: 'center'
            size_hint_y: None
            height: 40

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50

            TextInput:
                hint_text: 'City'
                id: city

            TextInput:
                hint_text: 'Max Price'
                id: max_price
                input_filter: 'int'

            Button:
                text: 'Search'
                size_hint_x: None
                width: 100
                on_press: app.show_listings()

        ScrollView:
            BoxLayout:
                id: listings_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                
        Button:
            text: 'Sign Out'
            size_hint_y: None
            height: 50
            on_press: app.logout_guest()
        Button:
            text: 'View Reservations'
            size_hint_y: None
            height: 50
            on_press: app.view_reserve()

<ReservationScreen>:
    name: 'reservation'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        
        Label:
            text: 'Reservation Details'
            font_size: 24
            bold: True
            halign: 'center'

        AsyncImage:
            id: listing_image
            source: '' 
            size_hint: None, None 
            width: 400 
            height: 300 
            allow_stretch: True  
            pos_hint: {'center_x': 0.5, 'center_y': 0.5} 

        Label:
            id: listing_name
            text: 'Listing Name: N/A'

        Label:
            id: listing_price
            text: 'Price: $0.00'

        Label:
            id: listing_location
            text: 'Location: N/A'

        TextInput:
            id: check_in
            hint_text: 'Check-in Date (YYYY-MM-DD)'
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: check_out
            hint_text: 'Check-out Date (YYYY-MM-DD)'
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: guests
            hint_text: 'Number of Guests'
            input_filter: 'int'
            multiline: False
            size_hint_y: None
            height: 40

        Button:
            text: 'Confirm Reservation'
            on_press: app.reserve_listing()

        Button:
            text: 'Back to Search'
            on_press: app.root.current = 'search'
        Label:
            id: reservation_result
            text: ''
            color: 0, 1, 0, 1  # Green text for success
            size_hint_y: None
            height: 30

<ViewReservationScreen>:
    name: 'viewreservation'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: "My Reservations"
            font_size: 24
            size_hint_y: None
            height: 40
            bold: True
            halign: 'center'

        ScrollView:
            BoxLayout:
                id: reservations_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 15

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Back"
                on_press: app.root.current = 'search'